{
  "name": "SNKit",
  "version": "2.0.0",
  "description": "Chrome Developer Tools extension for ServiceNow.",
  "devtools_page": "devtools.html",
  "manifest_version": 2,
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.service-now.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "snkitAnimations.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "snkit.js"
  ]
}